rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isOwner() {
      return isSignedIn() && getUserRole() == 'owner';
    }
    
    function isDriver() {
      return isSignedIn() && getUserRole() == 'driver';
    }
    
    function isCustomer() {
      return isSignedIn() && getUserRole() == 'customer';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Customers can read driver profiles (for name, plate, and real-time location tracking)
      allow read: if isSignedIn() && (isCustomer() || isDriver());
      
      // Owner can read all users
      allow read: if isOwner();
    }
    
    // Products collection
    match /products/{productId} {
      // Everyone can read products (for browsing)
      allow read: if true;
      
      // Only owner can create, update, delete products
      allow create, update, delete: if isOwner();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Customer can read their own orders
      allow read: if isSignedIn() && 
                     request.auth.uid == resource.data.customerId;
      
      // Driver can read orders assigned to them or available orders (paid/processing)
      allow read: if isSignedIn() && (
                     request.auth.uid == resource.data.get('driverId', null) ||
                     resource.data.status in ['paid', 'processing']
                   );
      
      // Owner can read all orders
      allow read: if isOwner();
      
      // Customer can create orders (must be their own)
      allow create: if isSignedIn() && 
                       request.auth.uid == request.resource.data.customerId;
      
      // Driver or Customer can update order status
      allow update: if (
                       // Customer updating to paid status
                       (isCustomer() && 
                        resource.data.customerId == request.auth.uid &&
                        resource.data.status == 'pending' &&
                        request.resource.data.status == 'paid') ||
                       
                       // Driver update flow
                       (isDriver() && (
                         // Driver accepting the order (Paid -> pesanan_dibuat)
                         ((resource.data.status == 'paid' || resource.data.status == 'processing') && 
                          request.resource.data.status == 'pesanan_dibuat' &&
                          request.resource.data.driverId == request.auth.uid) ||
                         // Driver intermediate steps
                         (['pesanan_dibuat', 'driver_tiba_di_restoran', 'pesanan_diambil_driver', 'otw_menuju_lokasi', 'on-delivery'].includes(resource.data.status) && 
                          resource.data.driverId == request.auth.uid)
                       ))
                     );
      
      // Owner can update any order
      allow update: if isOwner();
      
      // Owner can delete orders
      allow delete: if isOwner();
    }
    
    // Addresses collection (optional - if you implement this later)
    match /addresses/{addressId} {
      allow read, write: if isSignedIn() && 
                            request.auth.uid == resource.data.userId;
    }
    
    // Driver Applications collection
    match /driverApplications/{applicationId} {
      // Anyone can create an application (public form)
      allow create: if true;
      
      // Applicant can read their own application by document ID
      // (they get the ID after submission)
      allow read: if true; // Public read via unique ID
      
      // Owner can read all applications
      allow read: if isOwner();
      
      // Owner can update applications (review, approve, assign area)
      allow update: if isOwner();
      
      // Owner can delete applications
      allow delete: if isOwner();
    }
  }
}
