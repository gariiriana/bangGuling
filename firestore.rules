rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isOwner() {
      return isSignedIn() && getUserRole() == 'owner';
    }
    
    function isDriver() {
      return isSignedIn() && getUserRole() == 'driver';
    }
    
    function isCustomer() {
      return isSignedIn() && getUserRole() == 'customer';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
      
      // Owner can read all users
      allow read: if isOwner();
    }
    
    // Products collection
    match /products/{productId} {
      // Everyone can read products (for browsing)
      allow read: if true;
      
      // Only owner can create, update, delete products
      allow create, update, delete: if isOwner();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Customer can read their own orders
      allow read: if isSignedIn() && 
                     request.auth.uid == resource.data.customerId;
      
      // Driver can read orders assigned to them or available orders
      allow read: if isSignedIn() && (
                     request.auth.uid == resource.data.get('driverId', null) ||
                     resource.data.status == 'processing'
                   );
      
      // Owner can read all orders
      allow read: if isOwner();
      
      // Customer can create orders (must be their own)
      allow create: if isSignedIn() && 
                       request.auth.uid == request.resource.data.customerId;
      
      // Driver can update order status (accept, on-delivery, delivered)
      allow update: if isDriver() && (
                       // Driver accepting the order
                       (resource.data.status == 'processing' && 
                        request.resource.data.status == 'on-delivery' &&
                        request.resource.data.driverId == request.auth.uid) ||
                       // Driver completing the order
                       (resource.data.status == 'on-delivery' && 
                        request.resource.data.status == 'delivered' &&
                        resource.data.driverId == request.auth.uid)
                     );
      
      // Owner can update any order
      allow update: if isOwner();
      
      // Owner can delete orders
      allow delete: if isOwner();
    }
    
    // Addresses collection (optional - if you implement this later)
    match /addresses/{addressId} {
      allow read, write: if isSignedIn() && 
                            request.auth.uid == resource.data.userId;
    }
    
    // Driver Applications collection
    match /driverApplications/{applicationId} {
      // Anyone can create an application (public form)
      allow create: if true;
      
      // Applicant can read their own application by document ID
      // (they get the ID after submission)
      allow read: if true; // Public read via unique ID
      
      // Owner can read all applications
      allow read: if isOwner();
      
      // Owner can update applications (review, approve, assign area)
      allow update: if isOwner();
      
      // Owner can delete applications
      allow delete: if isOwner();
    }
  }
}
